@model IEnumerable<Amenity>;
@{
    ViewData["Title"] = "Amenities";
}
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Amenities List</h2>
            </div>
            
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Amenities" asp-action="Create" class="btn btn-secondary">
                    <i class="bg-info bi-plus-circle"></i>Create New Amenity
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Villa Name
                    </th>                    
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var amenity in Model)
                {
                    <tr>
                        <td>
                            @amenity.Name
                        </td>
                        <td>
                            @amenity.Description
                        </td>
                        <td>
                            @amenity.Villa.Name
                        </td>                        
                        <td>
                            <a asp-controller="Amenities" asp-action="Update" asp-route-amenityId="@amenity.Id" class="btn btn-success mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Amenities" asp-action="Delete" asp-route-amenityId="@amenity.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
    
        </table>
    </div>
</div>






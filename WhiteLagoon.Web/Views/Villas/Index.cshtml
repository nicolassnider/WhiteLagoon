@using WhiteLagoon.Domain.Entities
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
    we will use this view to show the list of villas

*@

@model IEnumerable<Villa>; 

@{
    ViewData["Title"] = "Villas";
}
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Villa List</h2>
            </div>
            
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Villas" asp-action="Create" class="btn btn-secondary">
                    <i class="bg-info bi-plus-circle"></i>Create New Villa
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Sqft
                    </th>
                    <th>
                        Occupancy
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var villa in Model)
                {
                    <tr>
                        <td>
                            @villa.Name
                        </td>
                        <td>
                            @villa.Price
                        </td>
                        <td>
                            @villa.Sqft
                        </td>
                        <td>
                            @villa.Occupancy
                        </td>
                        <td>
                            <a asp-controller="Villas" asp-action="Update" asp-route-villaId="@villa.Id" class="btn btn-success mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Villas" asp-action="Delete" asp-route-villaId="@villa.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
    
        </table>
    </div>
</div>






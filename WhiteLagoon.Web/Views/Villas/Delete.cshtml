@ViewBag.Title = "Delete Villa";

@model WhiteLagoon.Domain.Entities.Villa

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Villa</h2>
            </div>
            
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="@Model.Id" class="form-control border shadow" hidden /> @* hidden field, we pass the id *@
            <div class="p-3">
                @* Display validation summary. modelonly will display only the model errors *@                
                
                <div class="form-floating py-1 col-12">
                    <input disabled asp-for="@Model.Name" class="form-control border shadow" />
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input disabled asp-for="@Model.Description" class="form-control border shadow" />
                    <label asp-for="@Model.Description" class="form-label">Description</label>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input disabled asp-for="@Model.Price" class="form-control border shadow" />
                    <label asp-for="@Model.Price" class="form-label">Price</label>
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input disabled asp-for="@Model.Sqft" class="form-control border shadow" />
                    <label asp-for="@Model.Sqft" class="form-label">Sq Feet</label>
                    <span asp-validation-for="@Model.Sqft" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input disabled asp-for="@Model.Occupancy" class="form-control border shadow" />
                    <label asp-for="@Model.Occupancy" class="form-label">Occupancy</label>
                    <span asp-validation-for="@Model.Occupancy" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input disabled asp-for="@Model.ImageUrl" class="form-control border shadow" />
                    <label asp-for="@Model.ImageUrl" class="form-label">Image URL</label>
                    <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Villas" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel

                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}